{
  "name": "boiler-express",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">= 7.6.0"
  },
  "scripts": {
    "prod": "npm run clean && NODE_ENV=production webpack -p",
    "start": "node ./start.js",
    "dev": "concurrently \"npm run nodemon\" \"npm run devServer\" -n \"node,webpack\" --prefix name -c \"blue.bold,magenta.bold\"",
    "clean": "rimraf ./public/dist/*",
    "nodemon": "nodemon ./start.js --ignore src/",
    "assets": "webpack -w --display-max-modules 0",
    "devServer": "webpack-dev-server"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.5.0",
    "concurrently": "^3.4.0",
    "css-loader": "^0.28.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "normalize.css": "^7.0.0",
    "postcss-loader": "^2.0.5",
    "pug-loader": "^2.3.0",
    "sass-loader": "^6.0.5",
    "style-loader": "^0.17.0",
    "webpack": "^2.5.1",
    "webpack-dev-server": "^2.4.5"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "moment": "^2.17.1",
    "mongoose": "^4.10.2",
    "pug": "^2.0.0-rc.1",
    "request-ip": "^2.0.1",
    "ua-parser-js": "^0.7.12",
    "validator": "^7.0.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 8,
      "ecmaFeatures": {
        "impliedStrict": true,
        "jsx": false
      }
    },
    "extends": "eslint:recommended",
    "rules": {
      "object-shorthand": "warn",
      "prefer-arrow-callback": "warn"
    },
    "env": {
      "mongo": true,
      "node": true,
      "es6": true
    }
  },
  "babel": {
    "presets": [
      "env"
    ]
  }
}
